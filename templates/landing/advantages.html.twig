{% extends 'components/_wrapper.html.twig' %}
{% if advantages.extracontainerclasses is defined %}
    {% set extracontainerclasses = advantages.extracontainerclasses %}
{% endif %}
{% block wrappercontent %}
    <div class="row mx-0">
        {% for advantage in advantages.blocks %}
            <div class="col-4">
                <div class="d-flex flex-column">
                    <div class="mb-2">{{ advantage.title }}</div>
                    <div>{{ advantage.message }}</div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
