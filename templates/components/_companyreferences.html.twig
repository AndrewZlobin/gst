{% extends 'components/_wrapper.html.twig' %}
{% set extracontainerclasses = companyreference.extracontainerclasses %}
{% block wrappercontent %}
    <div class="references">
        <div class="references__caption">
            {{ companyreference.caption|raw }}
        </div>
        <div class="references__direction references__direction_header">
            {{ companyreference.directionheader|raw }}
        </div>
        <ul class="references__direction references__direction_list">
            {% for keys, direction in companyreference.directions %}
                <li class="references__direction references__direction_item" data-listkey="{{ keys }}">
                    {{ direction }}
                </li>
            {% endfor %}
        </ul>
        <div class="references__message">
            {{ companyreference.message|raw }}
        </div>
    </div>
{% endblock %}
