{% extends 'components/_wrapper.html.twig' %}
{% if footer.footercontent.extracontainerclasses is defined %}
    {% set extracontainerclasses = footer.footercontent.extracontainerclasses %}
{% endif %}
{% block wrappercontent %}
    <div>
        <div class="landing-header">{{ footer.footercontent.title|raw }}</div>
        <div class="landing-activities">
            {% for activity in footer.footercontent.activities %}
                {#Image src variable for each activity#}
                {% set imgsrc = 'build/img/' ~ activity.image ~ '.jpg' %}
                <div class="landing-activity">
                    <img class="landing-activity__image img-fluid w-100" src="{{ imgsrc }}" alt="{{ activity.title }}">
                    <div class="landing-activity__title px-1 py-2">{{ activity.title }}</div>
                    <div class="landing-activity__description px-1 py-1">{{ activity.description }}</div>
                    <div class="d-flex align-items-center">
                        <div class="landing-activity__button px-1 py-2">{{ footer.footercontent.moredetailes }}</div>
                        <img class="landing-activity__icon" src="{{ absolute_url(asset('build/icons/arrow_right.svg')) }}">
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="landing-activities__emptyspace"></div>
{% endblock %}
